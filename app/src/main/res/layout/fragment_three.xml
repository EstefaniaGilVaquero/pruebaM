<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_scrollFlags="enterAlways"
    tools:context=".activity.UtilitiesMeniere.ThreeFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/CVHearingDiary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/CVSaveData"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/CVHealtyHabits"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toTopOf="@+id/CVSaveData"
        app:layout_constraintEnd_toStartOf="@+id/CVHealtyHabits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewHeringDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/txtHearingDiary"
            android:textColor="@color/colorWhite"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageHearingDiary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hearing_blanco" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CVSaveData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/CVRateMe"
        android:layout_weight="1"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/CVRateMe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CVHearingDiary">

        <TextView
            android:id="@+id/textViewSaveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/txtDataImpExp"
            android:textColor="@color/colorWhite"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageSaveData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/save_load" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CVHealtyHabits"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/CVRateMe"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toTopOf="@+id/CVRateMe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CVHearingDiary"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/txtHealthyHabits"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgHealthyHabits"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/healty_blanco" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CVRateMe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CVSaveData"
        app:layout_constraintTop_toBottomOf="@+id/CVHealtyHabits">

        <TextView
            android:id="@+id/textViewRateMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="@string/txtRateMe"
            android:textColor="@color/colorWhite"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgRateMe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/myself_blanco" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
